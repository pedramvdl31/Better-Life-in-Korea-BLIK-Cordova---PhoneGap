      <icon height="58" platform="ios" src="www/res/ios/icons/bl-58.png" width="58" />
      <icon height="87" platform="ios" src="www/res/ios/icons/bl-87.png" width="87" />
      
      <splash height="1136" platform="ios" src="www/res/ios/splash/Default-568h@2x~iphone_640x1136.png" width="640" />
      <splash height="1334" platform="ios" src="screen.png" width="750" />
      <splash height="2208" platform="ios" src="screen.png" width="1242" />
      <splash height="1242" platform="ios" src="screen.png" width="2208" />
      <splash height="1536" platform="ios" src="screen.png" width="2048" />
      <splash height="768" platform="ios" src="screen.png" width="1024" />
      <splash height="2048" platform="ios" src="screen.png" width="1536" />
      <splash height="1024" platform="ios" src="screen.png" width="768" />
      <splash height="960" platform="ios" src="screen.png" width="640" />
      <splash height="480" platform="ios" src="screen.png" width="320" />
  </platform>


  <allow-navigation href="*" />
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="waze://*"/>
  <allow-intent href="waze://"/>
  <allow-intent href="waze:"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="*" />
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
</widget>