    <icon src="www/res/android/res/icon/xxxhdpi/ic_launcher.png" density="xxxhdpi"/>
    <splash src="www/res/android/res/drawable-land-ldpi/screen.png" density="land-ldpi"/>
    <splash src="www/res/android/res/drawable-land-mdpi/screen.png" density="land-mdpi"/>
    <splash src="www/res/android/res/drawable-land-hdpi/screen.png" density="land-hdpi"/>
    <splash src="www/res/android/res/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>
    <splash src="www/res/android/res/drawable-land-xxhdpi/screen.png" density="land-xxhdpi"/>
    <splash src="www/res/android/res/drawable-land-xxxhdpi/screen.png" density="land-xxxhdpi"/>
    <splash src="www/res/android/res/drawable-land-ldpi/screen.png" density="port-ldpi"/>
    <splash src="www/res/android/res/drawable-land-mdpi/screen.png" density="port-mdpi"/>
    <splash src="www/res/android/res/drawable-land-hdpi/screen.png" density="port-hdpi"/>
    <splash src="www/res/android/res/drawable-land-xhdpi/screen.png" density="port-xhdpi"/>
    <splash src="www/res/android/res/drawable-land-xxhdpi/screen.png" density="port-xxhdpi"/>
    <splash src="www/res/android/res/drawable-land-xxxhdpi/screen.png" density="port-xxxhdpi"/>
    <splash src="screen.png" density="port-mdpi"/>
    <icon src="icon.png"/>
  </platform>
  <platform name="ios">
      <icon height="57" platform="ios" src="www/res/ios/icons/icon.png" width="57" />
      <icon height="114" platform="ios" src="www/res/ios/icons/bl-114.png" width="114" />
