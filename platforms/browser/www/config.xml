<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.blik" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>blik</name>
    <description>Better Life in Korea</description>
    <author email="pedramkhoshnevis@gmail.com" href="http://www.webprinciples.com">BLIK</author>
    <content src="index.html" />
    <gap:plugin name="com.phonegap.plugins.facebookconnect" version="0.9.0">
        <param name="APP_ID" value="344746595879012" />
        <param name="APP_NAME" value="blik" />
    </gap:plugin>
    <gap:plugin name="cordova-plugin-x-socialsharing" source="npm" />
    <icon src="icon.png" />
    <splash src="screen.png" />
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="waze://*" />
    <allow-intent href="waze://" />
    <allow-intent href="waze:" />
    <allow-intent href="https://*/*" />
    <allow-intent href="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="8000" />
</widget>
